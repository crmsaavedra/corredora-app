        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 15px;
        max-width: 1000px;
        width: 100%;
        padding: 20px;
    }

    .card {
        width: 300px;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        position: relative;
        background-color: white;
        display: flex; /* Asegura estructura vertical */
        flex-direction: column;
    }

    /* Contenedor de imagen para mantener tamaño uniforme */
    .card-image-container {
        width: 100%;
        height: 200px; /* Altura fija para evitar saltos */
        overflow: hidden;
    }

    .card img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* La imagen cubre el área sin deformarse */
    }

    .badge {
        position: absolute;
        top: 10px;
        left: 10px;
        color: white;
        padding: 5px 10px;
        font-weight: bold;
        border-radius: 5px;
        z-index: 10;
    }

    .card-content {
        padding: 15px;
    }

    .title {
        font-size: 16px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .price {
        font-size: 24px;
        font-weight: bold;
        color: #000;
        margin-bottom: 10px;
    }

    .location {
        display: flex;
        align-items: center;
        color: #555;
        font-size: 14px;
    }

    .location::before {
        content: '\1F4CD';
        margin-right: 5px;
    }
</style>

<script>
    // FIX 1: Inicialización segura. Si el backend no envía la variable, usa un array vacío.
    // El || [] previene errores de "undefined" en JSON.stringify
    let aleatorios = <%- JSON.stringify(typeof aleatorios !== 'undefined' ? aleatorios : []) %>;
    let propiedades = <%- JSON.stringify(typeof propiedades !== 'undefined' ? propiedades : []) %>;

    let galeria_port = document.getElementById("galeria-port");
    let propiedades_item = document.getElementById("propiedades");

    galeria_port.innerHTML = "";
    propiedades_item.innerHTML = "";

    // Función unificada para generar HTML de tarjeta (Evita duplicar código y errores)
    function crearTarjeta(item) {
        // FIX 2: Validación de datos nulos con Optional Chaining (?.)
        const detalles = item.detalles || {};
        const estado = detalles.estado || '';
        const tipo_acuerdo = detalles.tipo_acuerdo || '';
        
        let disponible = true;
        if (estado === "ARRENDADO" || estado === "VENDIDO") {
            disponible = false;
        }

        let color = "bg-green-500";
        let msg = tipo_acuerdo;
        
        if (!disponible) {
            color = "bg-red-500";
            msg = estado;
        }

        // Formateo de precio
        let priceFormatted = "";
        try {
            if(item.tipo_moneda === "UF"){
                const formatter = new Intl.NumberFormat('es-CL', {
                    style: 'currency',
                    currency: "CLP",
                    trailingZeroDisplay: 'stripIfInteger'
                });
                priceFormatted = formatter.format(item.price).replace("$", "") + " UF";
            } else {
                const currency = item.tipo_moneda || 'CLP'; // Fallback a CLP
                const formatter = new Intl.NumberFormat('es-CL', {
                    style: 'currency',
                    currency: currency,
                    trailingZeroDisplay: 'stripIfInteger'
                });
                priceFormatted = formatter.format(item.price);
            }
        } catch (e) {
            console.error("Error formateando precio", e);
            priceFormatted = item.price; // Fallback sin formato
        }

        // FIX 3: Manejo seguro de imágenes
        let imagenSrc = "https://via.placeholder.com/300x200?text=No+Image"; // Imagen por defecto
        if (item.fotos && item.fotos.length > 0 && item.fotos[0]) {
            // Manejamos el replace de forma segura
            imagenSrc = item.fotos[0].replace("./public", "/static");
        }

        return `
            <a href="/propiedad/${item._id}" class="card mx-4 my-2" id="carta_${item._id}">
                <div class="card-image-container">
                    <img src="${imagenSrc}" alt="${item.nombre || 'Propiedad'}">
                </div>
                <div class="badge ${color}">${msg}</div>
                <div class="card-content">
                    <div class="title">${item.nombre || 'Sin título'}</div>
                    <div class="price">${priceFormatted}</div>
                    <div class="location">
                        ${item.comuna || ''}, ${item.provincia || ''}, ${item.region || ''}
                    </div>
                </div>
            </a>
        `;
    }

    // Renderizar Aleatorios
    if (Array.isArray(aleatorios)) {
        aleatorios.forEach(propiedad => {
            galeria_port.innerHTML += crearTarjeta(propiedad);
        });
    }

    // Renderizar Propiedades Generales
    if (Array.isArray(propiedades)) {
        propiedades.forEach(propiedad => {
            propiedades_item.innerHTML += crearTarjeta(propiedad);
        });
    }

    console.log("Datos cargados:", { aleatorios: aleatorios.length, propiedades: propiedades.length });
</script>